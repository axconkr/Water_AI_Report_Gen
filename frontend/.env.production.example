# ===================================
# APAS Frontend Production Environment
# ===================================
# Copy this file to .env.local in production server

# ===================================
# API Configuration
# ===================================
# Backend API endpoint
# Format: http://your-domain.com/api/v1 or https://api.your-domain.com/v1
NEXT_PUBLIC_API_URL=http://your-production-domain.com/api/v1

# ===================================
# Application Configuration
# ===================================
NEXT_PUBLIC_APP_NAME=APAS
NEXT_PUBLIC_APP_VERSION=0.1.0

# ===================================
# Feature Flags (Optional)
# ===================================
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

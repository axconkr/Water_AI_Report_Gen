# Node Environment
NODE_ENV=production

# Server Ports
FRONTEND_PORT=3000
BACKEND_PORT=4000

# API URL (for frontend to connect to backend)
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:8021/api/v1

# PostgreSQL Database Configuration (Local Docker)
DATABASE_URL=postgresql://apas:apas_password@postgres:5432/apas_db
POSTGRES_USER=apas
POSTGRES_PASSWORD=apas_password
POSTGRES_DB=apas_db

# AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OPENCHAT_API_URL=

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=365d
REFRESH_TOKEN_EXPIRES_IN=365d

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

# Timezone
TZ=Asia/Seoul

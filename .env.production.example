# ===================================
# APAS Production Environment Variables
# ===================================
# Copy this file to .env in production server
# Replace all placeholder values with actual credentials

# ===================================
# Server Configuration
# ===================================
PORT=4000
NODE_ENV=production

# ===================================
# Database (Supabase or PostgreSQL)
# ===================================
# Supabase URL format:
# postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@host:port/database?schema=public

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ===================================
# JWT Configuration
# ===================================
# Generate strong random strings:
# openssl rand -base64 32
JWT_SECRET=your_strong_jwt_secret_minimum_32_characters
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_strong_refresh_token_secret_minimum_32_characters
REFRESH_TOKEN_EXPIRES_IN=7d

# ===================================
# AI Services API Keys
# ===================================
# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude
CLAUDE_API_KEY=your-anthropic-claude-api-key-here

# OpenAI (for OpenChat)
OPENCHAT_API_KEY=your-openai-api-key-here

# ===================================
# CORS Configuration
# ===================================
# Allow multiple origins: http://domain1.com,http://domain2.com
CORS_ORIGIN=http://your-production-domain.com

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# File Upload
# ===================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx

# ===================================
# Email (Optional - for notifications)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Email From
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=APAS System

# ===================================
# Logging
# ===================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/apas/logs

# ===================================
# Security
# ===================================
# Session Secret
SESSION_SECRET=your_strong_session_secret_minimum_32_characters

# Bcrypt Salt Rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# ===================================
# External APIs (Optional)
# ===================================
# 국가법령정보센터 API Key
LAW_API_KEY=your-law-api-key-here

# 행정안전부 공공데이터 API Key
PUBLIC_DATA_API_KEY=your-public-data-api-key-here

# ========================================
# APAS Production Environment Variables
# ========================================
# 이 파일을 .env.production으로 복사하고 실제 값을 입력하세요
# cp .env.production.example .env.production

# ========================================
# Database Configuration (Supabase)
# ========================================
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ========================================
# Supabase Configuration
# ========================================
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_STORAGE_BUCKET=documents

# ========================================
# AI Service API Keys
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENCHAT_API_URL=https://your-openchat-server.com

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your_very_strong_jwt_secret_min_32_characters_long_here
JWT_REFRESH_SECRET=your_very_strong_refresh_secret_min_32_characters_long_here

# ========================================
# Server Configuration
# ========================================
NODE_ENV=production
FRONTEND_PORT=3000
BACKEND_PORT=4000
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
CORS_ORIGIN=http://localhost:3000

# ========================================
# File Upload Configuration
# ========================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# ========================================
# Timezone
# ========================================
TZ=Asia/Seoul

# ========================================
# APAS Production Environment Variables
# ========================================
# 이 파일을 .env.production으로 복사하고 실제 값을 입력하세요
# cp .env.production.example .env.production

# ========================================
# PostgreSQL Database (Docker 내부)
# ========================================
POSTGRES_USER=apas
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=apas_db

# ========================================
# Supabase Configuration (외부 서비스 - 권장)
# ========================================
# Supabase 외부 서비스 사용 (파일 스토리지 및 인증)
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_STORAGE_BUCKET=documents

# ========================================
# AI Service API Keys
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENCHAT_API_URL=https://your-openchat-server.com

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your_very_strong_jwt_secret_min_32_characters_long_here
JWT_REFRESH_SECRET=your_very_strong_refresh_secret_min_32_characters_long_here

# ========================================
# Server Configuration
# ========================================
NODE_ENV=production
FRONTEND_PORT=3000
BACKEND_PORT=4000
# 외부 접근 URL (CentOS 7 서버)
NEXT_PUBLIC_API_URL=http://1.236.245.110:8021/api/v1
CORS_ORIGIN=http://1.236.245.110:8020

# ========================================
# File Upload Configuration
# ========================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# ========================================
# Timezone
# ========================================
TZ=Asia/Seoul
